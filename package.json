{
  "name": "managed-dataset-definitions",
  "version": "1.0.0",
  "description": "Managed Dataset Definitions",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cityofasheville/managed-dataset-definitions.git"
  },
  "keywords": [
    "SimpliCity",
    "GraphQL"
  ],
  "author": "Eric Jackson <ejackson@ashevillenc.gov>",
  "license": "MIT",
  "homepage": "https://github.com/cityofasheville/managed-dataset-definitions",
  "dependencies": {
    "bunyan": "^1.8.5",
    "coa-command-line-args": "^1.0.2",
    "coa-node-logging": "^1.1.0",
    "dotenv": "^2.0.0",
    "mssql": "^3.3.0",
    "pg": "6.1.0",
    "pg-pool": "^1.6.0",
    "toposort": "^1.0.0"
  },
  "optionalDependencies": {
    "msnodesqlv8": "^0.2.11"
  },
  "devDependencies": {
    "eslint": "^3.12.2",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.8.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb/base",
      "plugin:import/errors"
    ],
    "rules": {
      "no-use-before-define": 0,
      "arrow-body-style": 0,
      "no-console": 0,
      "max-len": [
        "error",
        100,
        {
          "ignoreTrailingComments": true
        }
      ]
    },
    "env": {
      "mocha": true
    }
  }
}
